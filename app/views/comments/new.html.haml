.container
  %ul
    - @comment.errors.full_messages.each do |message|
      %li= message
  .title New Comment
  = form_with(model: @comment, url: board_task_comments_path(@board, @task), local: true) do |f|
    %div
      = f.label :content, '内容'
    %div
      = f.text_area :content, class: 'text'
    %div
      = f.submit '保存',  class: 'submit-btn'